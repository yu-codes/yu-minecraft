# Yu Minecraft Server 環境配置範例
# 複製此檔案為 .env 並修改相應設定

# 伺服器配置
MINECRAFT_VERSION=1.20.1
SERVER_NAME=Yu Minecraft Server
MAX_PLAYERS=20
MEMORY=2G

# 網路配置
SERVER_PORT=25565
RCON_PORT=25575
WEB_PORT=8080

# 安全配置 - 請修改為您自己的密碼
RCON_PASSWORD=your-secure-password-here
ENABLE_WHITELIST=false
ONLINE_MODE=true

# 遊戲配置
GAMEMODE=survival
DIFFICULTY=normal
PVP=true
ALLOW_NETHER=true
SPAWN_PROTECTION=16

# Docker配置
CONTAINER_NAME=yu-minecraft-server
NETWORK_NAME=minecraft-network

# 備份配置
BACKUP_RETENTION_DAYS=7
BACKUP_DIR=./backups

# 監控配置 (可選)
ALERT_THRESHOLD_CPU=80
ALERT_THRESHOLD_MEMORY=85
ALERT_THRESHOLD_DISK=90

# 效能最佳化配置 (可選)
JVM_XMS=1G
JVM_XMX=2G
ENABLE_JVM_OPTIMIZATION=true

# 外掛配置 (可選)
AUTO_UPDATE_PLUGINS=false
PLUGIN_BACKUP_ENABLED=true

# ========================================
# 🔔 通知設定
# ========================================

# Discord Webhook URL
# 1. 在 Discord 伺服器設定中創建 Webhook
# 2. 複製 Webhook URL 到下方
# DISCORD_WEBHOOK=https://discord.com/api/webhooks/YOUR_WEBHOOK_URL

# Slack Webhook URL  
# 1. 在 Slack 工作區中創建 Incoming Webhook 應用
# 2. 複製 Webhook URL 到下方
# SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR_WEBHOOK_URL

# Telegram Bot 設定
# 1. 與 @BotFather 對話創建 Bot，獲取 Token
# 2. 將 Bot 加入群組或取得 Chat ID
# TELEGRAM_BOT_TOKEN=YOUR_BOT_TOKEN
# TELEGRAM_CHAT_ID=YOUR_CHAT_ID

# Line Notify Token
# 1. 到 https://notify-bot.line.me/ 申請 Token
# 2. 將 Line Notify 加入群組
# LINE_NOTIFY_TOKEN=YOUR_LINE_TOKEN

# Email SMTP 設定 (Gmail 範例)
# 1. 啟用 Gmail 兩步驟驗證
# 2. 產生應用程式密碼
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# NOTIFY_EMAIL=friend1@example.com,friend2@example.com

# 管理員聯絡資訊
ADMIN_EMAIL=admin@example.com

# 自動通知設定
AUTO_NOTIFY_STARTUP=true
AUTO_NOTIFY_SHUTDOWN=true
AUTO_NOTIFY_ERRORS=true
